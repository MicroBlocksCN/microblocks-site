{{! Contribute }}

{{#> layouts._html-shell title="Microblocks - Contribute" pageClass="page-contribute"}}

{{#*inline "main-content"}}

  <!-- Header -->
  <header class="main__header">


    <!-- Hero -->
    <div class="hero-picture">
      <picture class="hero-picture__img">
        <source media="(min-width: 768px)" srcset="assets/img/pictures/picture-1920x1080.jpg">
        <source media="(max-width: 767px)" srcset="assets/img/pictures/picture-960x540.jpg">
        <img src="assets/img/picture/picture-1920x1080.jpg" alt="Hands connecting wires to a board" />
      </picture>
    </div>

    
    <div class="container">

      <!-- Title -->
      <div class="row">
        <div class="col-12">
          <h1 class="title-blocks">
            <span class="block block--orange">Contribute</span>
          </h1>
        </div>
      </div>

      <!-- Intro -->
      <div class="row">
        <div class="col-12 col-lg-10">
          <div class="page-header__intro wysiwyg">
            <p class="text-lg">Introduction? Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</p>
            <p>We are actively searching for <a href="contribute#translate">translators</a>, <a href="contribute#content-creation">content creators</a>, <a href="about#ambassadors">spreading the word</a> and <a href="contribute#financial-contribution">financial support</a>.</p>
          </div>
        </div>
      </div>

    </div>


  </header>
  <!-- Header -->


  <!-- Contents -->
  <div class="main__contents">


    <!-- Translate -->
    <div class="container" id="translate">
      <article class="row section border-top">

        <header class="col-12 col-md-4">
          <h2 class="section-title">Translate</h2>
        </header>
  
        <main class="col-12 col-md-8">
          <div class="row">
  
            <div class="col-12 col-lg-6 u_mb-2">
              <h3 class="section-subtitle">UI Translators</h3>
              <div class="wysiwyg">
                  {{#markdown "ui-translators"}}{{/markdown}}
                  <a class="btn btn--blue" href="https://wiki.microblocks.fun/translating" target="_blank">Translate MicroBlocks</a>
              </div>
            </div>
      
            <div class="col-12 col-lg-6">
              <h3 class="section-subtitle">Activity Cards Translators</h3>
              <div class="wysiwyg">
                  {{#markdown "card-translators"}}{{/markdown}}
              </div>
            </div>
  
          </div>
        </main>
  
      </article>  
    </div>
    <!-- Translate -->


    <!-- Content Creation -->
    <div class="container" id="content-creation">
      <article class="row section border-top">

        <header class="col-12 col-md-4">
          <h2 class="section-title">Content Creation</h2>
        </header>
  
        <main class="col-12 col-md-8">
          <div class="wysiwyg">
              {{#markdown "content-creation"}}{{/markdown}}
              <a class="btn btn--orange" href="learn">Visit Learn Section</a>
          </div>
        </main>
  
      </article>
    </div>
    <!-- Content Creation -->


    <!-- Financial Contribution -->
    <div class="container" id="financial-contribution">
      <article class="row section border-top">

        <header class="col-12 col-md-4">
          <h2 class="section-title">Financial Contribution</h2>
        </header>
  
        <main class="col-12 col-md-8">
          <div class="wysiwyg">
              {{#markdown "financial-contribution"}}{{/markdown}}
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
              <input type="hidden" name="cmd" value="_s-xclick">
              <input type="hidden" name="hosted_button_id" value="CHZLTCKCSFGTS">
              <button type="submit" name="submit" value="Donate" class="btn btn--teal">Donate Now!</button>
            </form>
          </div>
        </main>
  
      </article>
    </div>
    <!-- Financial Contribution -->


  </div>
  <!-- Contents -->


  <!-- Contents Footer -->
  <aside class="main__footer colored-section colored-section--yellow">
    <div class="container">
      <div class="row justify-content-md-center">
        <div class="col-12 col-md-10 col-lg-8">
          <div class="colored-section__title">
            <h2 class="block block--purple">Thank you!</h2>
          </div>          
          <div class="colored-section__contents">
            <p>
              Our heartfelt thanks to those who have contributed translations, educational materials, and financial support to all the educators who are using MicroBlocks to inspire their students.
            </p>
          </div>          
        </div>
      </div>
    </div>
  </aside>
  <!-- Contents Footer -->

{{/inline}}
{{/layouts._html-shell}}
