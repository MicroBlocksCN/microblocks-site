{{! Download }}

{{#> layouts._html-shell 
    title="Download" 
    pageClass="page-download"
    pageUrl="https://wwww.microblocks.fun/download"
    pageDescription="Download Microblocks!"
}}

{{#*inline "main-content"}}

<!-- Header -->
<header class="main__header">

  <!-- Hero -->
  <div class="hero-yellow">
    <div class="page-download__hero">

      <!-- Boardie -->
      <div class="page-download__hero__boardie">
        <img src="assets/img/boardie/boardie-download.svg" alt="Board with leds drawing a dowload arrow">
      </div>

      <!-- CTA -->
      <div class="page-download__hero__action">
        <h1>
          <span>get MicroBlocks for</span>
          <div class="section-title">windows</div>
        </h1>        
        <a class="btn btn--purple">Download</a>
      </div>

      <!-- Specs -->
      <div class="page-download__hero__specs">
        <div class="wysiwyg wysiwyg--black">
          <p>
          <strong>Current Version: <span class="version"></span></strong><br>
          Released on <span class="date"></span>. <a href="/downloads/latest/CHANGELOG.txt">Release&nbsp;notes</a>.
          </p>
        </div>
      </div>

    </div>
  </div>
  <script>
    populateDownloadPage();
  </script>
</header>
<!-- Header -->


<!-- Contents -->
<div class="main__contents">

  <div class="container">
    <div class="row justify-content-md-center section">
      <article class="col-12 col-md-10 col-lg-7">

        <header>
          <h2 class="section-title u_text-center">
            Need more options?
          </h2>
        </header>

        <main>
          <div class="wysiwyg wysiwyg--center">
            <p class="text-md">
              Are you searching for other platformsâ€™ installers, Virtual Machines or Standalone executables? You will find them here!
            </p>
            <div>
              <a class="btn btn--teal u_mb-0.5" href="releases">Other Platforms</a><br>
              <a class="btn btn--blue" href="/downloads">Previous Versions</a>
            </div>
          </div>
        </main>
        
      </article>
    </div>
  </div>

</div>
<!-- Contents -->


<!-- Contents Footer -->
<div class="main__footer">
    {{> _next-steps }}
</div>
<!-- Contents Footer -->

{{/inline}}
